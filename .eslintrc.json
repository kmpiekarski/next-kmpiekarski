{
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:storybook/recommended",
    "@sanity/eslint-config-studio",
    "prettier"
  ],
  "plugins": ["prettier", "simple-import-sort", "eslint-plugin-import"],
  "ignorePatterns": ["dist", "node_modules", ".sanity"],
  "rules": {
    "prettier/prettier": "error",
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "@next/next/no-styled-jsx-in-document": 1,
    "@next/next/no-sync-scripts": 2,
    "@next/next/no-page-custom-font": 2,
    "@next/next/no-html-link-for-pages": 2
    // "@typescript-eslint/consistent-type-imports": "error",
    // "import/no-default-export": "error"
  }
}
